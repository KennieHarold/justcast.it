{
  "name": "justcast-it",
  "description": "Straightforwad 1-click livestreaming web app",
  "version": "1.0.0",
  "private": true,
  "main": "dist/server/index.js",
  "scripts": {
    "start": "cd server && yarn start",
    "start:prod": "node dist/server/index.js",
    "publish": "gcloud builds submit --tag gcr.io/justcast-it/justcast-it",
    "deploy": "gcloud run deploy justcast-it --image=gcr.io/justcast-it/justcast-it:latest --platform=managed --region=us-east4",
    "clean": "rm -r dist",
    "build": "mkdir -p dist && concurrently --names server,client 'cd server && yarn build' 'cd client && yarn build'",
    "watch": "mkdir -p dist && concurrently --names server,client 'cd server && yarn watch' 'cd client && yarn watch'",
    "build:docker": "docker build --progress=plain -t justcast-it .",
    "start:docker": "docker run -it --rm -p 8080:8080 --name justcast-it justcast-it"
  },
  "workspaces": [
    "server",
    "client"
  ],
  "author": "Neolag Fresh Ventures",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/firestore": "^4.12.0",
    "axios": "^0.21.1",
    "cookie": "^0.4.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "is-ip": "^3.1.0",
    "unique-names-generator": "^4.5.0",
    "ws": "^7.4.6"
  },
  "devDependencies": {
    "@types/cookie": "^0.4.0",
    "@types/express": "^4.17.12",
    "@types/ws": "^7.4.4",
    "concurrently": "^6.2.0",
    "esbuild": "0.12.3",
    "google-auth-library": "^7.0.0",
    "got": "^11.0.0",
    "mocha": "^8.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "supertest": "^6.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  }
}
